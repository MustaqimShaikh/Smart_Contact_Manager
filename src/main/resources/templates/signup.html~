                        <!--term and condition-->
                        <div class="form-group form-check">
                            <input type="checkbox"
                                   name="agreement"
                                   class="form-check-input"
                                   th:classappend="${#fields.hasErrors('agreement') ? 'is-invalid' : ''}"
                                   id="agreement" />

                            <lable for="agreement">Accept terms & Conditions..!</lable>
                            <div class="invalid-feedback" th:each="a : ${#fields.errors('agreement')}" th:text="${a}">

