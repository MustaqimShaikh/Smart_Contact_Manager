                            <input type="text"
                                   name="name"
                                   class="form-control"
                                   th:classappend="${#fields.hasErrors('name') ? 'is-invalid' : ''}"
                                   id="name_field"
                                   aria-describedby="nameHelp"
                                   placeholder="Enter here"
                                   required
                                   th:value="${user.name}"/>

                            <div class="invalid-feedback" th:each="n : ${#fields.errors('name')}" th:text="${n}">

