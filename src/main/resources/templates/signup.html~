                        <!--email-field-->
                        <div class="form-group">

                            <lable for="name_field">Your Email ID</lable>
                            <input type="email"
                                   name="email"
                                   class="form-control"
                                   th:classappend="${#fields.hasErrors('email') ? 'is-invalid' : ''}"
                                   id="email_field"
                                   aria-describedby="emailHelp"
                                   placeholder="Enter here"
                                   required
                                   th:value="${user.email}" />

                            <div class="invalid-feedback" th:each="e : ${#fields.errors('email')}" th:text="${e}">

                            </div>
                        </div>

                        <!--password-field-->
                        <div class="form-group">

                            <lable for="name_field">Your Password</lable>
                            <input type="password"
                                   name="password"
                                   class="form-control"
                                   th:classappend="${#fields.hasErrors('password') ? 'is-invalid' : ''}"
                                   id="password_field"
                                   aria-describedby="passwordHelp"
                                   placeholder="Enter here"
                                   required />
                            <div class="invalid-feedback" th:each="p : ${#fields.errors('password')}" th:text="${p}">
                        </div>

                        <!--user about field-->
                        <div class="form-group">
                        <textarea name="about" th:text="${user.about}" placeholder="Enter something about yourself..!"
                                  rows="10" class="form-control">

